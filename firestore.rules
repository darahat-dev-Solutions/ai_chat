rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY DEBUGGING RULE - NOT SAFE FOR PRODUCTION
    match /{path=**}/chats/{chatId} {
      allow read: if true; // Allow anyone to read
      allow write: if request.auth != null && (request.auth.uid in chatId.split('-'));
    }

    // Your other rules can remain the same
    match /users/{userId} {
      allow read, list: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /{path=**}/chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null && (request.auth.uid in chatId.split('-'));
    }
  }
}
